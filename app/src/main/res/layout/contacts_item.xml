<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="contact"
            type="sk.fei.beskydky.cryollet.data.model.Contact" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_edit_text">

        <TextView
            android:id="@+id/identifier"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:textColor="@color/default_text"
            app:accountName="@{contact}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jakub Trstensky" />

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"
            app:walledId="@{contact}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/identifier"
            app:layout_constraintTop_toBottomOf="@+id/identifier"
            tools:text="JKH9o8sddfV09sdfgvd9vmsndFD456fjgnd"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>